{
    "name": "goods4you-landing",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "test": "vitest",
        "test:pw-docker:build": "docker build -t playwright-test .",
        "test:pw-docker": "docker run -v snapshots:/playwright/screenshots playwright-test npm run test:pw",
        "test:pw-snapshots-copy": "docker cp 81e:/usr/src/app/__snapshots__ .",
        "test:pw": "playwright test -c playwright-ct.config.ts",
        "test:pw-update": "playwright test -c playwright-ct.config.ts --update-snapshots",
        "preview": "vite preview"
    },
    "dependencies": {
        "@vanyamate/helpers": "^0.0.5",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@playwright/experimental-ct-react": "^1.42.1",
        "@testing-library/jest-dom": "^6.4.2",
        "@testing-library/react": "^14.2.1",
        "@testing-library/user-event": "^14.5.2",
        "@types/node": "^20.11.26",
        "@types/react": "^18.2.56",
        "@types/react-dom": "^18.2.19",
        "@typescript-eslint/eslint-plugin": "^7.0.2",
        "@typescript-eslint/parser": "^7.0.2",
        "@vitejs/plugin-react-swc": "^3.5.0",
        "eslint": "^8.56.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-n": "^16.6.2",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.5",
        "jsdom": "^24.0.0",
        "sass": "^1.71.1",
        "typescript": "^5.2.2",
        "vite": "^5.1.4",
        "vitest": "^1.3.1"
    }
}
